
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/controller/memberController.js"></script>
}

<!-- Page Heading -->
<head>
    <title>Admin | Member</title>
</head>
<!-- DataTales Example -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary col-md-12">Danh sách khách hàng</h6>
            </div>
            <div class="card-body" style="padding-top:10px">
                <div class="table-striped">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <label>
                                    Tìm kiếm:
                                    <input id="txtSearch" type="text" class="form-control form-control-sm" aria-controls="dataTable" style="display:inline-block;width:auto" />
                                    <button class="btn btn-success" id="btnSearch"><i class="mdi mdi-account-search"></i></button>
                                    <button class="btn btn-success" id="btnReset"><i class="mdi mdi-reload"></i></button>
                                </label>
                            </div>
                        </div>
                        <table class="table table-bordered" id="dataTable" width="150" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Mã khách hàng</th>
                                    <th>UserName</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Ảnh</th>
                                    @*<th>Thao tác</th>*@
                                </tr>
                            </thead>
                            <tbody id="tblData"></tbody>
                        </table>
                        <div id="pagination" class="pagination"></div>
                        <script id="data-template" type="x-tmpl-mustache">
                            <tr>
                                <td>{{IDMember}}</td>
                                <td>{{UserName}}</td>
                                <td>{{FullName}}</td>
                                <td>{{Address}}</td>
                                <td>{{Email}}</td>
                                <td>{{PhoneNumber}}</td>
                                <td><img src="/App_Img/profile/{{Avatar}}" width="100" height="100" /></td>
                                @*<td>
                                    <button class="btn btn-light btnEdit" data-id="{{IDMember}}"><i class="mdi mdi-tooltip-edit"></i>Edit</button>
                                    <button class="btn btn-light btnDelete" data-id="{{IDMember}}"><i class="mdi mdi-delete-forever"></i>Delete</button>
                                </td>*@
                            </tr>
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Member</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSave">
                    <div class="form-group">
                        <label for="txtUserName" >UserName</label>
                        <input type="text" class="form-control" id="txtUserName" name="txtUserName"disabled>
                        <input type="hidden" id="hidID" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="txtFullName">FullName</label>
                        <input type="text" class="form-control" id="txtFullName" name="txtFullName">
                    </div>
                    <div class="form-group">
                        <label for="txtAddress">Address</label>
                        <input type="text" class="form-control" id="txtAddress" name="txtAddress">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" id="txtEmail" name="txtEmail">
                    </div>
                    <div class="form-group">
                        <label for="txtPhoneNumber">PhoneNumber</label>
                        <input type="text" class="form-control" id="txtPhoneNumber" name="txtPhoneNumber">
                    </div>
                    <div class="form-group">
                        <label for="urlAvatar">Avatar</label>
                        <input type="text" class="form-control" name="urlAvatar" id="urlAvatar" />
                        <input type="button" id="btnUpload" value="Chọn tệp ảnh" />
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
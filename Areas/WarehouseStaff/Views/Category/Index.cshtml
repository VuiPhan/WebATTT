@model Web.Models.ViewModels.ProductTypeVM
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Areas/WarehouseStaff/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh mục sản phẩm</h4>
            <a href="#" class="btn btn-info" onclick="Add(0)">Thêm danh mục mới</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Mã danh mục</th>
                        <th> Tên danh mục</th>
                        <th> Icon</th>
                        <th> Thao tác (Sửa)</th>
                        @*<th> Thao tác (Xóa)</th>*@
                    </tr>
                </thead>
                <tbody id="tblData">
                    <tr id="LoadingStatus" style="color:red"></tr>
                </tbody>
            </table>
            <div id="paged" class="pagination"></div>
        </div>
    </div>

    @*Create A Popup Modal With Registration Form For Add Or Edit Record*@

    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form class="forms-sample" id="form" enctype="multipart/form-data">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.IDProductType, new { @id = "IDProductType" })
                            <div class="form-group">
                                <label for="NameProductType">Tên danh mục</label>
                                @Html.TextBoxFor(m => m.NameProductType, new { @id = "NameProductType", @class = "form-control", @placeholder = "Tên danh mục" })
                            </div>
                            <div class="form-group">
                                <label for="Logo">Logo</label>
                                @Html.TextBoxFor(m => m.Icon, new { @id = "Icon", @class = "form-control", @hidden = "hidden" })
                                <input type="file" class="form-control" id="file" value="Chọn tệp ảnh" />
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-gradient-primary mr-2" id="SaveRecord">Lưu</button>
                    <button class="btn btn-light" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>

    @*Create A PopUp Modal For DeleteConfirmation*@

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Xóa danh mục</h4>
                </div>
                <div class="modal-body">
                    <h4>Bạn có muốn xóa danh mục này không?</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-light" data-dismiss="modal" id="r">Hủy</a>
                    <a href="#" class="btn btn-gradient-primary mr-2" onclick="ConfirmDelete()">Xác nhận</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //Initially load pagenumber=1
        GetPageData(1);
    });
     function GetPageData(pageNum) {
        //After every trigger remove previous data and paging
        $("#tblData").empty();
        $("#paged").empty();
        $.getJSON("/WarehouseStaff/Category/GetPaggedData", { pageNumber: pageNum}, function (response) {
            var rowData = "";
            for (var i = 0; i < response.Data.length; i++) {
                rowData = rowData +
                    '<tr class="row_' + response.Data[i].IDProductType + '">' +
                    '<td>' + response.Data[i].IDProductType +
                    '</td><td>' + response.Data[i].NameProductType +
                    '</td><td>' + "<img style='width: 100px; height: 100px;' src='/App_Img/productType/" + response.Data[i].Icon + "'/>" +
                    '</td><td>' + "<a href='#' class='btn btn-warning' onclick='EditRecord(" + response.Data[i].IDProductType + ")' ><span class='mdi mdi-table-edit'></span></a>" +
                    //'</td><td>' + "<a href='#' class='btn btn-danger' onclick='DeleteRecord(" + response.Data[i].IDProductType + ")' ><span class='mdi mdi-delete'></span></a>" +

                    '</td></tr>';
            }
            $("#tblData").append(rowData);
            PaggingTemplate(response.TotalPages, response.CurrentPage);
        });
    }
    //This is paging temlpate ,you should just copy paste
    function PaggingTemplate(totalPage, currentPage) {
        var template = "";
        var TotalPages = totalPage;
        var CurrentPage = currentPage;
        var PageNumberArray = Array();


        var countIncr = 1;
        for (var i = currentPage; i <= totalPage; i++) {
            PageNumberArray[0] = currentPage;
            if (totalPage != currentPage && PageNumberArray[countIncr - 1] != totalPage) {
                PageNumberArray[countIncr] = i + 1;
            }
            countIncr++;
        };
        PageNumberArray = PageNumberArray.slice(0, 5);
        var FirstPage = 1;
        var LastPage = totalPage;
        if (totalPage != currentPage) {
            var ForwardOne = currentPage + 1;
        }
        var BackwardOne = 1;
        if (currentPage > 1) {
            BackwardOne = currentPage - 1;
        }

        template = "<hr/><p>" + CurrentPage + " trong số " + TotalPages + " trang</p>"
        template = template + '<a class="page-link" href="#" onclick="GetPageData(' + FirstPage +')">&laquo;</a>' +
            '<a class="page-link" href="#" onclick="GetPageData(' + BackwardOne + ')">Trước</a>';

        var numberingLoop = "";
        for (var i = 0; i < PageNumberArray.length; i++) {
            numberingLoop = numberingLoop +
                '<a class="page-link" onclick="GetPageData(' + PageNumberArray[i] + ')" href="#">' + PageNumberArray[i] + '</a>'
        }
        template = template + numberingLoop +
            '<a class="page-link" href="#" onclick="GetPageData(' + ForwardOne + ')" >Tiếp</a>' +
            '<a class="page-link" href="#" onclick="GetPageData(' + LastPage + ')">&raquo;</a>';

        $("#paged").append(template);
    }
    $("#file").change(function () {
        if (window.FormData !== undefined) {
            var fileUpload = $('#file').get(0);
            var file = fileUpload.files;
            var formData = new FormData();
            formData.append('file', file[0]);
            $.ajax({
                type: 'POST',
                url: '/WarehouseStaff/Category/UploadImg',
                contentType: false, //không có header
                processData: false, //không xử lý dữ liệu
                data: formData,
                success: function (urlImage) {
                    $('#Icon').val(urlImage);
                },
                error: function (err) {
                    bootbox.alert('Có lỗi khi Upload:' + err.statusText);
                }
            })
        }
    })

    //Show The Popup Modal For Add

    function Add(IDProductType) {
        $("#form")[0].reset();
        $("#IDProductType").val(0);
        $("#ModalTitle").html("Thêm danh mục mới");
        $("#MyModal").modal();
    }

    //Show The Popup Modal For Edit Record

    function EditRecord(IDProductType) {
        var url = '/WarehouseStaff/Category/GetById?Id=' + IDProductType;
        $("#ModalTitle").html("Sửa danh mục");
        $("#MyModal").modal();
        $.ajax({
            type: 'GET',
            url: url,
            success: function (response) {
                var data = JSON.parse(response);
                $("#IDProductType").val(data.IDProductType);
                $("#NameProductType").val(data.NameProductType);
                $("#Icon").val(data.Icon);
            }
        })
    }

    $("#SaveRecord").click(function () {
        var res = validate();
        if (res == false) {
            return false;
        }
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/WarehouseStaff/Category/SaveDataInDatabase",
            data: data,
            success: function (result) {
                window.location.href = "/WarehouseStaff/Category";
                $("#MyModal").modal("hide");

            }
        })
    })

    //Show The Popup Modal For DeleteComfirmation
    var DeleteRecord = function (Id) {
        $("#IDProductType").val(Id);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var IDProductType = $("#IDProductType").val();
        $.ajax({
            type: "POST",
            url: "/WarehouseStaff/Category/DeleteRecord?Id=" + IDProductType,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + IDProductType).remove();
            }
        })
    }

    function validate() {
        var isValid = true;
        if ($('#NameProductType').val().trim() == "") {
            $('#NameProductType').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#NameProductType').css('border-color', 'lightgrey');
        }
        if ($('#Icon').val().trim() == "") {
            $('#Icon').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#file').css('border-color', 'lightgrey');
        }
        return isValid;
    }
</script>


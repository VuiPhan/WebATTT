<script src="~/Scripts/Controller/ViewOrderController.js"></script>

<div class="card" style="zoom:0.67">
    <div class="card-body">

        <h4 class="card-title" style="text-align:center; color: orangered;font-size:30px;margin-bottom:20px;">            
            Quản lý đơn hàng
        </h4>
        <hr width="50%" align="center" style="color:blue; line-height:2px;" />
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist" style="zoom:1.5">
                <a style="text-align:center;color:orange;width:150px;" class="nav-item nav-link active btnstatus" data-status="10" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                    Tất cả <br />
                    <img src="~/App_Img/GIFAnimation/document.gif" />
                </a>
                <a style="text-align:center;width:140px;" class="nav-item nav-link btnstatus" data-status="1" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">
                    Chờ xác nhận
                    <img src="~/App_Img/GIFAnimation/hourglass.gif" />
                </a>
                <a style="text-align:center;width:150px;" class="nav-item nav-link btnstatus" data-status="2" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">
                    Chờ lấy hàng
                    <img src="~/App_Img/GIFAnimation/ezgif.com-gif-maker ChoGiao.gif" />
                </a>
                <a style="text-align:center;width:150px;" class="nav-item nav-link btnstatus" data-status="3" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Đang giao<img src="~/App_Img/GIFAnimation/ezgif.com-gif-maker DangGiao.gif" /></a>
                <a style="text-align:center;width:100px;" class="nav-item nav-link btnstatus" data-status="4" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Đã giao<img src="~/App_Img/GIFAnimation/ezgif.com-gif-maker DaGiao.gif" style="margin-bottom:0px!important;" /></a>
                <a style="text-align:center;width:100px;" class="nav-item nav-link btnstatus" data-status="0" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">
                    Đã hủy
                    <img src="~/App_Img/GIFAnimation/trash-bin.gif" />
                </a>
                <a style="text-align:center;width:170px;" class="nav-item nav-link btnstatus" data-status="5" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Trả hàng/Hoàn tiền <br />    <img src="~/App_Img/GIFAnimation/restart.gif" /></a>

            </div>
        </nav>
        <br />
        <br />

        <div style="display:inline;">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <div class="searchBox" style="height:60px; zoom:100%;margin-left:1100px!important;margin-top:25px;">
                <input class="searchInput" type="text" id="strSeach" name="" placeholder="Nhập mã đơn hàng">
                <button class="searchButton" id="btn-Search">
                    <i class="material-icons">
                        search
                    </i>
                </button>
            </div>
        </div>


        <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
        <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
        <div style="display:inline-block">
            <p style="display:inline-block">Ngày bắt đầu</p>
            <input id="datepicker1" class="datepicker" width="276" style="" />
        </div>
        <div style="display:inline-block">
            <p style="display:inline-block">Ngày kết thúc</p>
            <input id="datepicker2" class="datepicker" width="276" style="" />
        </div>
        <button id="btn-SearchDate" class="btn btn-primary">Tìm kiếm </button>
        <script>
            $('#datepicker1').datepicker({
                uiLibrary: 'bootstrap4'
            });
            $('#datepicker2').datepicker({
                uiLibrary: 'bootstrap4'
            });
        </script>

        <p id="idSLDon" style="color:orange; font-size:20px; text-align:left;"> </p>


        <link href="~/Scripts/styleSearch.css" rel="stylesheet" />

        <br />
        <br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <td style="font-size:20px!important;">Mã đơn đặt hàng</td>
                    <td style="font-size:20px!important;">Ngày đặt hàng</td>
                    <td style="font-size:20px!important;">Tên khách hàng</td>
                    <td style="font-size:20px!important;">Tình trạng đơn hàng</td>
                    <td style="font-size:20px!important;text-align:center;">Thao tác</td>
                </tr>
            </thead>
            <tbody id="tblData">

            </tbody>

        </table>
        <div id="pagination" class="pagination">
        </div>
        <div class="col-12">
            <script id="data-template" type="x-tmpl-mustache" class="col-md-12">

                <tr>
                    <td style="font-size:20px!important;">{{IDOrder}}</td>
                    <td style="font-size:20px!important;">{{OrderedDate}}</td>
                    <td style="font-size:20px!important;">{{NameCus}}</td>
                    <td style="font-size:20px!important;">{{StatusOrder}}</td>
                    <td>
                        <button class="btn btn-primary btn-Edit" style="margin-right:0px;" data-id="{{IDOrder}}">Xem chi tiết đơn hàng</button>
                        <button class="btn btn-success btn-Update" style="margin-right:0px;" data-id="{{IDOrder}}">Duyệt đơn hàng </button>
                        <button class="btn btn-danger btn-Delete" style="margin-right:0px;" data-id="{{IDOrder}}">Hủy đơn hàng </button>

                    </td>
                </tr>

            </script>
        </div>
    </div>
    </div>
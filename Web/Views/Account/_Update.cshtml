@model Web.Models.Data.Member

    <div class="card-body">
        <h3>Thông tin tài khoản</h3>
        @using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @class = "row login_form" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            @Html.HiddenFor(m => m.IDMember)
            <div class="col-md-6 form-group">
                <label for="Ten">Họ và tên</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Họ và tên" })
            </div>
            <div class="col-md-6 form-group">
                <label for="Email">Địa chỉ Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Mật khẩu" })
            </div>
            <div class="col-md-6 form-group">
                <label for="DiaChi">Địa chỉ</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
            </div>
            <div class="col-md-6 form-group">
                <label for="SDT">Số điện thoại</label>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Số điện thoại" })
            </div>

            <div class="col-md-6 form-group">
                <label for="TenDangNhap">Tên đăng nhập</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
            </div>
            <div class="col-md-6 form-group">
                <label for="MatKhau">Mật khẩu</label>
                @Html.PasswordFor(m => m.PassWord, new { @class = "form-control", @placeholder = "Mật khẩu" })
            </div>
            <br />
            <div style="align-items: center; justify-content: center;" class="form-group">
                <button type="submit" class="primary-btn">Cập nhật</button>
            </div>
        }
    </div>

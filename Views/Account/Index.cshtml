                                    <td style="font-size:15px!important;text-align:center;">Thao tác</td>
                                </tr>
                            </thead>
                            <tbody id="tblData"></tbody>

                        </table>
                        <div id="pagination" class="pagination" style="width:1000px!important;margin-left:0px;">
                        </div>
                        <script id="data-template" type="x-tmpl-mustache">
                            <tr>
                                <td style="font-size:15px!important;">{{IDOrder}}</td>
                                <td style="font-size:15px!important;">{{OrderedDate}}</td>
                                <td style="font-size:15px!important;">{{NameCus}}</td>
                                <td style="font-size:15px!important;width:150px;">{{StatusOrder}}</td>
                                <td>
                                    <button class="btn btn-primary btn-Edit" style="margin-right:0px;" data-id="{{IDOrder}}">Xem chi tiết đơn hàng</button>
                                </td>
                            </tr>
                        </script>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

                    </div>
                </div>

            </div>
        </section>
    }


    @*Create A Popup Modal With Registration Form For Add*@

    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4> Đăng ký</h4>
                </div>
                <div class="modal-body">
                    <form class="forms-sample" id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.IDMember, new { @id = "IDMember" })
                            <div class="form-group">
                                <label for="Ten">Họ và tên</label>
                                @Html.TextBoxFor(m => m.FullName, new { @id = "FullName", @class = "form-control", @placeholder = "Họ và tên" })
                            </div>
                            <div class="form-group">
                                <label for="Email">Địa chỉ Email</label>
                                <h5 id="notifi" style="color:orangered;"></h5>
                                @Html.TextBoxFor(m => m.Email, new { @id = "Email", @class = "form-control", @placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                <label for="TenDangNhap">Tên đăng nhập</label>
                                <h5 id="notifi" style="color:orangered;"></h5>
                                @Html.TextBoxFor(m => m.UserName, new { @id = "UserName", @class = "form-control", @placeholder = "Tên đăng nhập" })
                            </div>
                            <div class="form-group">
                                <label for="MatKhau">Mật khẩu</label>
                                <h5 id="notifii" style="color:orangered;"></h5>
                                @Html.PasswordFor(m => m.PassWord, new { @id = "PassWord", @class = "form-control", @placeholder = "Mật khẩu" })
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-gradient-primary mr-2" id="Create">Đăng ký</button>
                    <button class="btn btn-gradient-light" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!--================End Login Box Area =================-->

<script>
    //Show The Popup Modal For Add

    function Add() {
        $("#form")[0].reset();
        $("#MyModal").modal();
    }
    function validateEmail(email) {
      const re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      return re.test(email);
    }

    $("#Email").change(function () {
        $("#Email").css('border-color', 'lightgrey');
        var pa = $("#Email").val();
        var checkEmail = validateEmail(pa);
        if (checkEmail == false) {
            $('#Email').css('border-color', 'red');
        }
    })
    $("#UserName").change(function () {
        $("#UserName").css('border-color', 'lightgrey');
    })
    $("#PassWord").change(function () {
        $("#PassWord").css('border-color', 'lightgrey');
        var pa = $("#PassWord").val();
        var x = document.getElementById("notifii");
        x.style.display = 'none';
        $.ajax({
            type: "Post",
            url: "/Account/CheckPassword?pass=" + pa,
            success: function (json) {
                if (json.isRedirect == 1) {
                    $("#PassWord").css('border-color', 'Red');
                    x.style.display = 'block'
                    $("#notifii").html("Mật khẩu phải chứa chữ in hoa");
                }
                if (json.isRedirect == 2) {
                    $("#PassWord").css('border-color', 'Red');
                    x.style.display = 'block'
                    $("#notifii").html("Mật khẩu phải chứa chữ in thường");
                }
                if (json.isRedirect == 3) {
                    $("#PassWord").css('border-color', 'Red');
                    x.style.display = 'block'
                    $("#notifii").html("Mật khẩu phải chứa kí tự số");
                }
                if (json.isRedirect == 4) {
                    $("#PassWord").css('border-color', 'Red');
                    x.style.display = 'block'
                    $("#notifii").html("Mật khẩu phải chứa kí tự đặc biệt");
                }
                if (json.isRedirect == 5) {
                    $("#PassWord").css('border-color', 'Red');
                    x.style.display = 'block'
                    $("#notifii").html("Mật khẩu phải dài hơn 8 kí tự");
                }
            }
        })
    })


    $("#Create").click(function () {
        if ($('#UserName').val().trim() == "") {
            $('#UserName').css('border-color', 'Red');
            return false;
        }
        else {
            $('#UserName').css('border-color', 'lightgrey');
        }

        if ($('#Email').val().trim() == "" || validateEmail($("#Email").val()) == false) {
            debugger;
            $('#Email').css('border-color', 'Red');
            alert('Địa chỉ Email không hợp lệ, vui lòng kiểm tra lại');
            return false;
        }
        else {
            $('#Email').css('border-color', 'lightgrey');
        }

        if ($('#PassWord').val().trim() == "") {
            $('#PassWord').css('border-color', 'Red');
            return false;
        }
        else {
            $('#PassWord').css('border-color', 'lightgrey');
        }
        if ($('#FullName').val().trim() == "") {
            $('#FullName').css('border-color', 'Red');
            return false;
        }
        else {
            $('#FullName').css('border-color', 'lightgrey');
        }

        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Account/Register",
            data: data,
            success: function (json) {
                debugger;
                if (json.isRedirect == 10) {
                    alert('Địa chỉ Email đã tồn tại, Vui lòng chọn chức năng quên mật khẩu');
                    $("#Email").css('border-color', 'Red');
                    return;
                }
                if (json.isRedirect == 5) {
                    $("#UserName").css('border-color', 'Red');
                    alert("Tên người dùng đã tồn tại, vui lòng chọn tên khác");
                    return;
                }
                if (json.isRedirect == 100) {
                    $("#Email").css('border-color', 'Red');
                    alert("Không tìm thấy địa chỉ Email này, Vui lòng nhập đúng Email");
                    return;
                }
                if (json.isRedirect == 1) {
                    window.location.href = json.redirectUrl;
                }
            }
        })
    })
</script>
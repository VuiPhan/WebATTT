<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    @if (Session["Account"] == null)
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_box_img">
                        <img class="img-fluid" src="~/Resources/Client/img/login.jpg" alt="">
                        <div class="hover">
                            <h4>Bạn là người dùng mới?</h4>
                            <p> Dữ liệu cá nhân của bạn sẽ được sử dụng để hỗ trợ trải nghiệm của bạn trên toàn bộ trang web này</p>
                            <a class="primary-btn" onclick="Add()">Tạo tài khoản mới</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    @Html.Action("_Login", "Account")
                </div>
            </div>
        </div>
    }
    else
    {
        Web.Models.Data.Member khachHang = (Web.Models.Data.Member)Session["Account"];
        <section class="product_description_area">
            <div class="container">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                           aria-selected="false">Bảng điều khiển</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                           aria-selected="false">Đơn hàng</a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div>
                            <h4 style="color: darkred">@ViewBag.Notification </h4>
                        </div>
                        <div>
                            <p>
                                Xin chào <strong>@khachHang.FullName</strong> (không phải <strong>@khachHang.FullName</strong>?
                                <a href="@Url.Action("LogOut","Account")"> Đăng xuất </a>)
                            </p>

                        </div>
                        <div style="border: solid;  border-style: solid; border-color: darkgray; padding: 15px;">
                            <h4><a href="/Account/ChangePassword/@khachHang.IDMember">Thay đổi mật khẩu</a></h4>
                        </div>
                        <br />
                        <div style="border: solid; border-style:solid; border-color: darkgray; padding: 15px;">
                            <h4><a href="/Account/Update">Cập nhật thông tin tài khoản </a></h4>
                        </div>
                        <br />
                        <div style="border: solid; border-style:solid; border-color: darkgray; padding: 15px;">
                            <h4><a href="/Account/Delete/@khachHang.IDMember">Xóa tài khoản </a></h4>
                        </div>
                        <br />
                        <div style="border: solid; border-style:solid; border-color: darkgray; padding: 15px;">
                            <h4><a href="/Account/TwoFac">Xác thực hai yếu tố</a></h4>
                        </div>
                        <br />
                    </div>

                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active btnstatus" data-status="10" id="home-tab" data-toggle="tab" href="" role="tab" aria-controls="home"
                                   aria-selected="false">Tất cả đơn hàng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btnstatus" data-status="1" id="home-tab" data-toggle="tab" href="" role="tab" aria-controls=""
                                   aria-selected="false">Chờ xác nhận</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btnstatus" data-status="2" id="home-tab" data-toggle="tab" href="" role="tab" aria-controls=""
                                   aria-selected="false">Chờ lấy hàng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btnstatus" data-status="3" id="home-tab" data-toggle="tab" href="" role="tab" aria-controls=""
                                   aria-selected="false">Đang giao</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btnstatus" data-status="4" id="home-tab" data-toggle="tab" href="" role="tab" aria-controls=""
                                   aria-selected="false">Đã giao</a>
                            </li>
                            <li class="nav-item">
